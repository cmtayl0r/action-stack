{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // Enable all strict checks
    "noUnusedLocals": true, // Warn about unused variables
    "noUnusedParameters": true, // Warn about unused parameters
    "noFallthroughCasesInSwitch": true, // Catch switch statement bugs

    /* Custom Path Mapping */
    "baseUrl": ".", // Base for relative imports
    "paths": {
      "@/*": ["src/*"], // @/components/Button
      "@/components/*": ["src/components/*"], // Direct component imports
      "@/types": ["src/types"],
      "@/types/*": ["src/types/*"],
      "@/hooks/*": ["src/hooks/*"], // Custom hooks
      "@/utils/*": ["src/utils/*"] // Utility functions
    }
  },
  "include": [
    "src",
    "vite.config.ts", // ← Include build files here
    "vitest.config.ts" // ← Include test config here
  ]
}
